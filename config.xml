<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.spoutly" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spoutly</name>
    <description>
        A Spoutly App.
    </description>
    <author email="cbutzen@gmail.com" href="http://spoutly.com">
        Spoutly
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <engine name="ios" spec="~4.3.1" />
    <preference name="AllowInlineMediaPlayback" value="true" />
	<preference name="MediaPlaybackRequiresUserAction" value="false" />   
	<allow-navigation href="*youtube*" />
	<allow-navigation href="*ytimg*" />
</widget>
