<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.spoutly" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spoutly</name>
    <description>
        A Spoutly App.
    </description>
    <author email="cbutzen@gmail.com" href="http://spoutly.com">
        Spoutly
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <origin href="http://spoutly.com/*" />
    <allow-intent href="http://spoutly.com/*" />
    <allow-navigation href="http://spoutly.com/*" />
    
    <origin href="http://*youtube.com/*" />
    <allow-intent href="http://*youtube.com/*" />
    <allow-navigation href="http://*youtube.com/*" />
    
     <origin href="https://*youtube.com/*" />
    <allow-intent href="https://*youtube.com/*" />
    <allow-navigation href="https://*youtube.com/*" />
    
    <origin href="http://*twitter.com/*" />
    <allow-intent href="http://*twitter.com/*" />
    <allow-navigation href="http://*twitter.com/*" />
    
     <origin href="https://*twitter.com/*" />
    <allow-intent href="https://*twitter.com/*" />
    <allow-navigation href="https://*twitter.com/*" />
    
    <origin href="http://*platform.twitter.com/*" />
    <allow-intent href="http://*platform.twitter.com/*" />
    <allow-navigation href="http://*platform.twitter.com/*" />
    
    <origin href="https://*platform.twitter.com/*" />
    <allow-intent href="https://*platform.twitter.com/*" />
    <allow-navigation href="https://*platform.twitter.com/*" />
    
    <access origin="https://cdn.syndication.twimg.com/*" />
    <allow-intent href="https://cdn.syndication.twimg.com/*" />
    <allow-navigation href="https://cdn.syndication.twimg.com/*" />
    
	<access origin="http://cdn.syndication.twimg.com/*" />
    <allow-intent href="http://cdn.syndication.twimg.com/*" />
    <allow-navigation href="http://cdn.syndication.twimg.com/*" />
	
    
    <allow-intent href="*" />
    <allow-navigation href="*" />
    
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" />
    <engine name="ios" spec="~4.3.1" />
    <preference name="AllowInlineMediaPlayback" value="true" />
	<preference name="MediaPlaybackRequiresUserAction" value="false" />   
	<allow-navigation href="*youtube*" />
	<allow-navigation href="*ytimg*" />
	<platform name="ios">
		<!-- iOS 8.0+ -->
		<!-- iPhone 6 Plus  -->
		<icon src="www/images/platforms/ios/icons/icon-60@3x.png" width="180" height="180" />
		<!-- iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<icon src="www/images/platforms/ios/icons/icon-60.png" width="60" height="60" />
		<icon src="www/images/platforms/ios/icons/icon-60@2x.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="www/images/platforms/ios/icons/icon-76.png" width="76" height="76" />
		<icon src="www/images/platforms/ios/icons/icon-76@2x.png" width="152" height="152" />
		<!-- iOS 6.1 -->
		<!-- Spotlight Icon -->
		<icon src="www/images/platforms/ios/icons/icon-40.png" width="40" height="40" />
		<icon src="www/images/platforms/ios/icons/icon-40@2x.png" width="80" height="80" />
		<!-- iPhone / iPod Touch -->
		<icon src="www/images/platforms/ios/icons/icon.png" width="57" height="57" />
		<icon src="www/images/platforms/ios/icons/icon@2x.png" width="114" height="114" />
		<!-- iPad -->
		<icon src="www/images/platforms/ios/icons/icon-72.png" width="72" height="72" />
		<icon src="www/images/platforms/ios/icons/icon-72@2x.png" width="144" height="144" />
		<!-- iPhone Spotlight and Settings Icon -->
		<icon src="www/images/platforms/ios/icons/icon-small.png" width="29" height="29" />
		<icon src="www/images/platforms/ios/icons/icon-small@2x.png" width="58" height="58" />
		<!-- iPad Spotlight and Settings Icon -->
		<icon src="www/images/platforms/ios/icons/icon-50.png" width="50" height="50" />
		<icon src="www/images/platforms/ios/icons/icon-50@2x.png" width="100" height="100" />
		<!-- images are determined by width and height. The following are supported -->
		<splash src="www/images/platforms/ios/splash/Default~iphone.png" width="320" height="480"/>
		<splash src="www/images/platforms/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
		<splash src="www/images/platforms/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
		<splash src="www/images/platforms/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
		<splash src="www/images/platforms/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
		<splash src="www/images/platforms/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
		<splash src="www/images/platforms/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
		<splash src="www/images/platforms/ios/splash/Default-667h.png" width="750" height="1334"/>
		<splash src="www/images/platforms/ios/splash/Default-736h.png" width="1242" height="2208"/>
		<splash src="www/images/platforms/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
	</platform>
	<feature name="InAppBrowser">
    	<param name="ios-package" value="CDVInAppBrowser" />
	</feature>
	<feature name="InAppBrowser" />
     
    
     
</widget>
